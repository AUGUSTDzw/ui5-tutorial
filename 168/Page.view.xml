<mvc:View
	height="100%"
	controllerName="sap.ui5.walkthrough.Page"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page
		showHeader="false"
		class="sapUiContentPadding">
		<content>
			<HBox justifyContent="SpaceAround">
				<Select
						selectedKey="{/SelectedBook}"
						items="{
							path: '/BookCollection',
							sorter: { path: 'Name' }
						}"
						change=".onChange">
					<core:Item key="{BookId}" text="{Name}" />
				</Select>
			</HBox>
		</content>
	</Page>
</mvc:View>